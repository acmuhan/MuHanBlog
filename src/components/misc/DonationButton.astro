---
import { Icon } from "astro-icon/components";
import { donationConfig } from "../../config";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

{donationConfig.enable && (
    <div class:list={["donation-container rounded-xl p-6 border border-[var(--line-divider)] bg-gradient-to-r from-[var(--card-bg)] to-[var(--card-bg)]/80 backdrop-blur-sm", className]}>
        <div class="text-center mb-4">
            <div class="flex items-center justify-center gap-2 mb-2">
                <Icon name="material-symbols:favorite-rounded" class="text-red-500 text-xl" />
                <h3 class="text-lg font-semibold text-black/80 dark:text-white/80">
                    {i18n(I18nKey.donationTitle)}
                </h3>
            </div>
            <p class="text-sm text-black/60 dark:text-white/60">
                {i18n(I18nKey.donationDescription)}
            </p>
        </div>
        
        <div class="flex justify-center">
            {donationConfig.afdian.enable && (
                <a 
                    href={donationConfig.afdian.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="donation-btn group flex items-center gap-3 px-6 py-3 rounded-full bg-gradient-to-r from-[#946ce6] to-[#7c5ce8] hover:from-[#8a5ee6] hover:to-[#7250e8] text-white font-medium transition-all duration-300 transform hover:scale-105 hover:shadow-lg active:scale-95"
                    aria-label="通过爱发电支持作者"
                >
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                    </svg>
                    <span class="group-hover:text-white/90">
                        {donationConfig.afdian.name}
                    </span>
                    <Icon name="material-symbols:arrow-outward-rounded" class="text-sm opacity-70 group-hover:opacity-100 transition-opacity" />
                </a>
            )}
        </div>
        
        <div class="text-center mt-3">
            <p class="text-xs text-black/50 dark:text-white/50">
                {i18n(I18nKey.donationThanks)}
            </p>
        </div>
    </div>
)}

<style>
.donation-btn {
    box-shadow: 0 4px 15px rgba(148, 108, 230, 0.2);
}

.donation-btn:hover {
    box-shadow: 0 6px 20px rgba(148, 108, 230, 0.3);
}

.donation-container {
    background: linear-gradient(135deg, var(--card-bg) 0%, rgba(var(--card-bg-rgb), 0.8) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid var(--line-divider);
}

@media (prefers-color-scheme: dark) {
    .donation-container {
        background: linear-gradient(135deg, var(--card-bg) 0%, rgba(var(--card-bg-rgb), 0.9) 100%);
    }
}
</style>
